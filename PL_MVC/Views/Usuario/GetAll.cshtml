@model ML.Usuario
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>



<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Usuario</h2>
        </div>
    </div>



    <div class="row">
        <div class="col-md-12">
            <h5>Seleccione un registro para agregar o editar su informacion</h5>
            <hr>
        </div>
    </div>


    <div class="row">
            <div class="col-md-1 offset-md-11">

                @Html.ActionLink("+", "Form", "Usuario", new { @class = "btn btn-success" })

            </div>
        </div>

    @if (Model.Usuarios != null)
    {
        <div class="row table-responsive">
            <div class="col-md-12">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>Editar</th>
                            <th>IdUsuario</th>
                            <th>UserName</th>
                            <th>Nombre</th>
                            <th>ApellidoPaterno</th>
                            <th>ApellidoMaterno</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Sexo</th>
                            <th>Telefono</th>
                            <th>Celular</th>
                            <th>FechaNacimiento</th>
                            <th>CURP</th>
                            <th>Rol</th>
                            <th>Imagen</th>


                            @*<th>Calle</th>
                            <th>Número Exterior</th>
                            <th>Número Interior</th>
                            <th>Colonia</th>
                            <th>Municipio</th>
                            <th>Estado</th>
                            <th>País</th>*@

                            <th>Eliminar</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (ML.Usuario usuario in Model.Usuarios)
                        {
                            <tr>
                                <td>
                                    @*<i class="bi bi-pencil-fill"><a href="@Url.Action("Form","Usuario",new {IdUsuario = usuario.IdUsuario})"></a></i>*@
                                    <a class="btn btn-warning bi bi-person-fill-x" href="@Url.Action("Form","Usuario",new {IdUsuario = usuario.IdUsuario})"></a>



                                </td>

                                @*<td>Editar</td>*@
                                @*<td class="hidden">@usuario.IdUsuario</td>*@
                                <td>@usuario.IdUsuario</td>
                                <td>@usuario.UserName</td>
                                <td>@usuario.Nombre</td>
                                <td>@usuario.ApellidoPaterno</td>
                                <td>@usuario.ApellidoPaterno</td>
                                <td>@usuario.Email</td>
                                <td>@usuario.Password</td>
                                <td>@usuario.Sexo</td>
                                <td>@usuario.Telefono</td>
                                <td>@usuario.Celular</td>
                                <td>@usuario.FechaNacimiento</td>
                                <td>@usuario.CURP</td>
                                <td>@usuario.Rol.Nombre</td>

                                @if (usuario.Imagen != null)
                                {
                                    <td>
                                        <img src="data:image/png;base64,@Convert.ToBase64String(usuario.Imagen)" alt="@usuario.Nombre" width="100" height="100" />
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <img src="~/imagen/default.png" alt="@usuario.Nombre" width="100" height="100" />
                                    </td>
                                }


                                


                                @*<td>Eliminar</td>*@
                                <td>
                                    <a class="btn btn-danger bi bi-person-fill-x"
                                       href="@Url.Action("Delete","Usuario", new {IdUsuario = usuario.IdUsuario})"
                                       onclick="return confirm('Estas Seguro de Eliminar este registro?');">

                                    </a>
                                </td>



                            </tr>
                        }
                    </tbody>


                </table>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-danger" role="alert">
            No se encontraron Usuarios registrados. Error: @ViewBag.Message
        </div>
    }


</div>

